{
  "apiKey": "<API_KEY>",
  "baseUrl": "https://api.opsgenie.com",
  "logLevel": "DEBUG",
  "globalArgs": [
    "<list_of_args_you_want_to_pass_to_the_scripts>"
  ],
  "globalFlags": {
    "apiToken": "<api_token>",
    "zendeskEmail": "<zendesk_email>",
    "zendeskUrl": "<zendesk_url>"
  },
  "actionMappings": {
    "createTicket": {
      "filepath": "<path_of_script>",
      "sourceType": "<local | git>",
      "environmentVariables": [
        "e1=v1",
        "e2=v2"
      ],
      "stdout": "<path_of_output_file_of_script>"
    },
    "addInternalComment": {
      "filepath": "<path_of_script>",
      "sourceType": "<local | git>",
      "environmentVariables": [
        "e1=v1",
        "e2=v2"
      ],
      "stdout": "<path_of_output_file_of_script>"
    },
    "addPublicComment": {
      "filepath": "<path_of_script>",
      "sourceType": "<local | git>",
      "environmentVariables": [
        "e1=v1",
        "e2=v2"
      ],
      "stdout": "<path_of_output_file_of_script>"
    },
    "setStatusToOpen": {
      "filepath": "<path_of_script>",
      "sourceType": "<local | git>",
      "environmentVariables": [
        "e1=v1",
        "e2=v2"
      ],
      "stdout": "<path_of_output_file_of_script>"
    },
    "setStatusToPending": {
      "filepath": "<path_of_script>",
      "sourceType": "<local | git>",
      "environmentVariables": [
        "e1=v1",
        "e2=v2"
      ],
      "stdout": "<path_of_output_file_of_script>"
    },
    "setStatusToSolved": {
      "filepath": "<path_of_script>",
      "sourceType": "<local | git>",
      "environmentVariables": [
        "e1=v1",
        "e2=v2"
      ],
      "stdout": "<path_of_output_file_of_script>"
    },
    "setStatusToClosed": {
      "filepath": "<path_of_script>",
      "sourceType": "<local | git>",
      "environmentVariables": [
        "e1=v1",
        "e2=v2"
      ],
      "stdout": "<path_of_output_file_of_script>"
    }
  },
  "pollerConf": {
    "pollingWaitIntervalInMillis": 100,
    "visibilityTimeoutInSec": 30,
    "maxNumberOfMessages": 10
  },
  "poolConf": {
    "maxNumberOfWorker": 12,
    "minNumberOfWorker": 4,
    "monitoringPeriodInMillis": 15000,
    "keepAliveTimeInMillis": 6000,
    "queueSize": 0
  }
}